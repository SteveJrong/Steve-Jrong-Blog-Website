<!-- 设置Spring多环境配置标识 -->
<context-param>
	<param-name>spring.profiles.active</param-name>
	<param-value>develop</param-value>
</context-param>

<!-- log4j配置文件加载   -->
<context-param>      
    <param-name>log4jConfigLocation</param-name>      
    <param-value>WEB-INF/classes/develop/log4j.properties</param-value>      
</context-param>